<robot name="snake">

<link name="link1">
	<inertial>
		<origin rpy="0 1.57 0" xyz="0 0 0.25"/>
		<mass value="1.0"/>
		<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
	</inertial>

	<visual name="">
		<geometry>
			<cylinder radius="0.25" length="1.5"/>
		</geometry>
		<material name="red">
			<color rgba="1 0 0 1"/>
		</material>
		<origin rpy="0 1.57 0" xyz="0 0 0.25"/>
	</visual>

	<collision>
		<geometry>
			<cylinder radius="0.25" length="1.25"/>
		</geometry>
		<origin rpy="0 1.57 0" xyz="0.25 0 0.25"/>
	</collision>
</link>

<link name="link2">
	<inertial>
		<origin rpy="0 1.57 0" xyz="0.75 0 0.25"/>
		<mass value="1.0"/>
		<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
	</inertial>

	<visual name="">
		<geometry>
			<cylinder radius="0.25" length="1.5"/>
		</geometry>
		<material name="green">
			<color rgba="0 1 0 1"/>
		</material>
		<origin rpy="0 1.57 0" xyz="0.75 0 0.25"/>
	</visual>

	<collision>
		<geometry>
			<cylinder radius="0.25" length="1.25"/>
		</geometry>
		<origin rpy="0 1.57 0" xyz="1 0 0.25"/>
	</collision>
</link>

<link name="link3">
	<inertial>
		<origin rpy="0 1.57 0" xyz="0.75 0 0.25"/>
		<mass value="1.0"/>
		<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
	</inertial>

	<visual name="">
		<geometry>
			<cylinder radius="0.25" length="1.5"/>
		</geometry>
		<material name="blue">
			<color rgba="0 0 1 1"/>
		</material>
		<origin rpy="0 1.57 0" xyz="0.75 0 0.25"/>
	</visual>

	<collision>
		<geometry>
			<cylinder radius="0.25" length="1.25"/>
		</geometry>
		<origin rpy="0 1.57 0" xyz="1 0 0.25"/>
	</collision>
</link>

<joint name="joint1" type="revolute">
	<origin rpy="0 0 0" xyz="0.75 0 0"/>
	<parent link="link1"/>
	<child link="link2" />
	<axis xyz="0 0 1"/>
	<limit effort="1000.0" lower="-1.57" upper="1.57" velocity="1.0"/>
</joint>

<joint name="joint2" type="revolute">
	<origin rpy="0 0 0" xyz="1.5 0 0"/>
	<parent link="link2"/>
	<child link="link3" />
	<axis xyz="0 0 1"/>
	<limit effort="1000.0" lower="-1.57" upper="1.57" velocity="1.0"/>
</joint>

</robot>
